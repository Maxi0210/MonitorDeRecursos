<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Futuristas intensos-->
    <Color x:Key="HyperBlue">#007CF0</Color>
    <Color x:Key="DigitalLavender">#C084FC</Color>
    <Color x:Key="NeonViolet">#9D00FF</Color>
    <Color x:Key="DeepPurpleGlow">#5E17EB</Color>
    <Color x:Key="CyberGrape">#5D3FD3</Color>
    <Color x:Key="BlueMagentaMix">#7F00FF</Color>
    <Color x:Key="Ultraviolet">#8E44AD</Color>
    <Color x:Key="ElectricIndigo">#6F00FF</Color>
    <Color x:Key="PlasmaBlue">#00B7EB</Color>
    <Color x:Key="HolographicSky">#89CFF0</Color>

    <!-- Futuristas claros-->
    <Color x:Key="IcyLavender">#D7BFFF</Color>
    <Color x:Key="NeonSky">#A0E9FF</Color>
    <Color x:Key="FrozenGrape">#D1A3FF</Color>
    <Color x:Key="ElectricLilac">#CBA6F7</Color>
    <Color x:Key="CyberMint">#A4F6F9</Color>
    <Color x:Key="MysticPeriwinkle">#B9BEFF</Color>
    <Color x:Key="PlasmaViolet">#D6B3FF</Color>
    <Color x:Key="LaserIce">#BBF0FF</Color>
    <Color x:Key="AuroraGlow">#E0D4FF</Color>
    <Color x:Key="RadiantSky">#C2F0FF</Color>

    <!-- Futuristas oscuros-->
    <Color x:Key="DeepSpace">#0D1117</Color>
    <Color x:Key="DarkNebula">#121C2B</Color>
    <Color x:Key="MidnightPulse">#1A1F2E</Color>
    <Color x:Key="CarbonGlow">#1E1E2F</Color>
    <Color x:Key="ObsidianFog">#202124</Color>
    <Color x:Key="SlateCore">#2A2E3B</Color>
    <Color x:Key="NightAlloy">#2C2F4A</Color>
    <Color x:Key="AstralBlack">#181920</Color>
    <Color x:Key="CosmicSteel">#232837</Color>
    <Color x:Key="DigitalAsh">#3A3F52</Color>

    <!-- Brushes para uso directo -->
    <SolidColorBrush x:Key="HyperBlueBrush" Color="{StaticResource HyperBlue}" />
    <SolidColorBrush x:Key="DigitalLavenderBrush" Color="{StaticResource DigitalLavender}" />
    <SolidColorBrush x:Key="NeonVioletBrush" Color="{StaticResource NeonViolet}" />
    <SolidColorBrush x:Key="DeepPurpleGlowBrush" Color="{StaticResource DeepPurpleGlow}" />
    <SolidColorBrush x:Key="CyberGrapeBrush" Color="{StaticResource CyberGrape}" />
    <SolidColorBrush x:Key="BlueMagentaMixBrush" Color="{StaticResource BlueMagentaMix}" />
    <SolidColorBrush x:Key="UltravioletBrush" Color="{StaticResource Ultraviolet}" />
    <SolidColorBrush x:Key="ElectricIndigoBrush" Color="{StaticResource ElectricIndigo}" />
    <SolidColorBrush x:Key="PlasmaBlueBrush" Color="{StaticResource PlasmaBlue}" />
    <SolidColorBrush x:Key="HolographicSkyBrush" Color="{StaticResource HolographicSky}" />
    <SolidColorBrush x:Key="IcyLavenderBrush" Color="{StaticResource IcyLavender}" />
    <SolidColorBrush x:Key="NeonSkyBrush" Color="{StaticResource NeonSky}" />
    <SolidColorBrush x:Key="FrozenGrapeBrush" Color="{StaticResource FrozenGrape}" />
    <SolidColorBrush x:Key="ElectricLilacBrush" Color="{StaticResource ElectricLilac}" />
    <SolidColorBrush x:Key="CyberMintBrush" Color="{StaticResource CyberMint}" />
    <SolidColorBrush x:Key="MysticPeriwinkleBrush" Color="{StaticResource MysticPeriwinkle}" />
    <SolidColorBrush x:Key="PlasmaVioletBrush" Color="{StaticResource PlasmaViolet}" />
    <SolidColorBrush x:Key="LaserIceBrush" Color="{StaticResource LaserIce}" />
    <SolidColorBrush x:Key="AuroraGlowBrush" Color="{StaticResource AuroraGlow}" />
    <SolidColorBrush x:Key="RadiantSkyBrush" Color="{StaticResource RadiantSky}" />
    <SolidColorBrush x:Key="DeepSpaceBrush" Color="{StaticResource DeepSpace}" />
    <SolidColorBrush x:Key="DarkNebulaBrush" Color="{StaticResource DarkNebula}" />
    <SolidColorBrush x:Key="MidnightPulseBrush" Color="{StaticResource MidnightPulse}" />
    <SolidColorBrush x:Key="CarbonGlowBrush" Color="{StaticResource CarbonGlow}" />
    <SolidColorBrush x:Key="ObsidianFogBrush" Color="{StaticResource ObsidianFog}" />
    <SolidColorBrush x:Key="SlateCoreBrush" Color="{StaticResource SlateCore}" />
    <SolidColorBrush x:Key="NightAlloyBrush" Color="{StaticResource NightAlloy}" />
    <SolidColorBrush x:Key="AstralBlackBrush" Color="{StaticResource AstralBlack}" />
    <SolidColorBrush x:Key="CosmicSteelBrush" Color="{StaticResource CosmicSteel}" />
    <SolidColorBrush x:Key="DigitalAshBrush" Color="{StaticResource DigitalAsh}" />
</ResourceDictionary>